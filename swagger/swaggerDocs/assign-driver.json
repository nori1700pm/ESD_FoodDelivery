{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Assign Driver Service API",
    "description": "API documentation for the Assign Driver microservice"
  },
  "host": "localhost:5006",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Checks the health of the assign driver service",
        "responses": {
          "200": {
            "description": "Service is healthy"
          },
          "500": {
            "description": "Health check failed"
          }
        }
      }
    },
    "/assign/{order_id}": {
      "post": {
        "summary": "Assign a driver to an order",
        "description": "Assigns a driver to a specific order based on availability",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The ID of the order"
          }
        ],
        "responses": {
          "200": {
            "description": "Driver assigned successfully",
            "schema": {
              "type": "object",
              "properties": {
                "order_update": { "type": "object", "description": "Updated order details" },
                "driver_id": { "type": "string", "description": "Assigned driver ID" }
              }
            }
          },
          "202": {
            "description": "No drivers currently available. Order set to pending."
          },
          "400": {
            "description": "Invalid order details"
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Failed to assign driver"
          }
        }
      }
    },
    "/cancel/{order_id}": {
      "post": {
        "summary": "Cancel an order after 15 minutes when no drivers have been assigned/started a delivery",
        "description": "Cancels an order and processes a refund to the customer's wallet after 15 minutes when no drivers have been assigned/started a delivery",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The ID of the order"
          }
        ],
        "responses": {
          "200": {
            "description": "Order cancelled and refund processed",
            "schema": {
              "type": "object",
              "properties": {
                "order_status": { "type": "object", "description": "Updated order status" },
                "refund_status": { "type": "object", "description": "Refund details" },
                "message": { "type": "string", "description": "Success message" }
              }
            }
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Failed to cancel order"
          }
        }
      }
    }
  }
}
