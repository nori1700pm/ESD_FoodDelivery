{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Error Service API",
    "description": "API documentation for the Error microservice"
  },
  "host": "localhost:4001",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/errors": {
      "get": {
        "summary": "Get all errors",
        "description": "Fetches all error logs from the database",
        "responses": {
          "200": {
            "description": "List of error logs",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "timestamp": { "type": "string", "format": "date-time" },
                  "error_details": { "type": "object" },
                  "routing_key": { "type": "string" }
                }
              }
            }
          },
          "500": {
            "description": "Failed to fetch error logs"
          }
        }
      }
    },
    "/errors/{error_id}": {
      "get": {
        "summary": "Get error details",
        "description": "Fetches details of a specific error log by ID",
        "parameters": [
          {
            "name": "error_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The ID of the error log"
          }
        ],
        "responses": {
          "200": {
            "description": "Error log details",
            "schema": {
              "type": "object",
              "properties": {
                "timestamp": { "type": "string", "format": "date-time" },
                "error_details": { "type": "object" },
                "routing_key": { "type": "string" }
              }
            }
          },
          "404": {
            "description": "Error log not found"
          },
          "500": {
            "description": "Failed to fetch error log"
          }
        }
      }
    }
  }
}
